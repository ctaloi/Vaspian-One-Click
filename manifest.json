{
  "manifest_version": 3,
  "name": "Vaspian One Click",
  "version": "1.0.0",
  "description": "One-click calling for Vaspian Phone System",
  "permissions": [
    "storage",
    "cookies",
    "sidePanel"
  ],
  "host_permissions": [
    "https://xtone.buf.vaspian.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html?mode=sidebar"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
